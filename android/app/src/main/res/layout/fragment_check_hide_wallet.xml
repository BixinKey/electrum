<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mainwheel.CheckHideWalletFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_card_add"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        app:cardElevation="25dp"
        app:cardCornerRadius="@dimen/dp_14">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_little">

            <ImageView
                android:id="@+id/img_Addmoney"
                android:layout_width="50dp"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="48dp"
                android:padding="@dimen/dp_15"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/add"
                android:background="@drawable/gray_circle"
                android:src="@drawable/lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_Addmoney"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/check_hide_wallet"
                android:textColor="@color/text_0"
                android:textSize="13sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>