<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_5"
    tools:context=".fragment.mainwheel.WheelViewpagerFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_14"
        app:cardPreventCornerOverlap="true"
        tools:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conlay_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/wallet_card_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="center_vertical"
                android:text="@string/wallet_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:drawableStart="@drawable/rule_white"
                android:drawablePadding="5dp"
                android:textColor="@android:color/white"
                android:visibility="visible"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="0/0" />

            <TextView
                android:id="@+id/app_wallet"
                android:layout_width="@dimen/dp_45"
                android:layout_height="17dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/appwallet_text_back"
                android:gravity="center"
                android:text="@string/app_walt"
                android:textColor="@color/app_name_text"
                android:textSize="@dimen/sp_10"
                android:visibility="gone"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv3"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:text="@string/balance"
                android:textColor="@color/wallet_yue"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/wallet_card_name"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_name" />


            <TextView
                android:id="@+id/wallet_card_tv4"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:text="@string/str_0_00"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv3"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3" />

            <TextView
                android:id="@+id/tet_fiat"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@id/wallet_card_tv4"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3"
                tools:text="-0.2123483(未确认)" />


            <TextView
                android:id="@+id/tet_Cny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c1d0e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv4"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4"
                tools:text="≈74527364CNY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4">

                <Button
                    android:id="@+id/wallet_card_bn1"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="5.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bk_small"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/wallet_card_bn2"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="5.5dp"
                    android:layout_marginEnd="5.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bk_small"
                    android:gravity="center"
                    android:text="@string/receive"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/wallet_card_bn3"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="5.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bk_small"
                    android:gravity="center"
                    android:text="@string/signature"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>