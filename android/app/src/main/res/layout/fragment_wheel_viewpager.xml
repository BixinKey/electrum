        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conlay_back"
            android:layout_width="320dp"
            android:layout_height="180dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/home_bg">

            <TextView
                android:id="@+id/wallet_card_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_vertical"
                android:text="@string/wallet_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginEnd="26dp"
                android:drawableStart="@drawable/rule_white"
                android:drawablePadding="5dp"
                android:text="@string/zero_three"
                android:textColor="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/app_wallet"
                android:layout_width="@dimen/dp_55"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:background="@drawable/appwallet_text_back"
                android:layout_height="20dp"
                android:layout_marginEnd="26dp"
                android:text="@string/app_walt"
                android:textColor="@color/text"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv3"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:text="@string/balance"
                android:textColor="@color/wallet_yue"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toStartOf="@id/wallet_card_name"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_name" />


            <TextView
                android:id="@+id/wallet_card_tv4"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv3"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3"
                tools:text="43.556789 BTC" />

            <TextView
                android:id="@+id/tet_fiat"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintStart_toEndOf="@id/wallet_card_tv4"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3"
                tools:text="-0.2123483(未确认)" />


            <TextView
                android:id="@+id/tet_Cny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c1d0e4"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv4"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4"
                tools:text="≈74527364CNY" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4">

                <Button
                    android:id="@+id/wallet_card_bn1"
                    android:layout_width="126dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="5.5dp"
                    android:background="@drawable/button_bk_small"
                    android:gravity="center"
                    android:text="@string/send"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/wallet_card_bn2"
                    android:layout_width="126dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="5.5dp"
                    android:background="@drawable/button_bk_small"
                    android:gravity="center"
                    android:text="@string/receive"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>


