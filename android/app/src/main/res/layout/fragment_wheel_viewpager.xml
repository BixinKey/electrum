<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.mainwheel.WheelViewpagerFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_card"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:elevation="4dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_bk">

            <TextView
                android:id="@+id/wallet_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="26dp"
                android:text="@string/wallet_name"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:drawableStart="@drawable/rule_white"
                android:drawablePadding="5dp"
                android:text="3-7"
                android:textColor="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_name"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/balance"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@id/wallet_card_name"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_name" />

            <TextView
                android:id="@+id/wallet_card_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="43.556 BTC"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv3"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3" />

            <Button
                android:id="@+id/wallet_card_bn1"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/wallet_card_bn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4" />

            <Button
                android:id="@+id/wallet_card_bn2"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="9dp"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/receive"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@id/wallet_card_bn1"
                app:layout_constraintEnd_toStartOf="@id/wallet_card_bn3"
                app:layout_constraintStart_toEndOf="@id/wallet_card_bn1" />

            <Button
                android:id="@+id/wallet_card_bn3"
                android:layout_width="82dp"
                android:layout_height="27dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/signature"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smaller_text_size"
                app:layout_constraintBottom_toBottomOf="@id/wallet_card_bn2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wallet_card_bn2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>