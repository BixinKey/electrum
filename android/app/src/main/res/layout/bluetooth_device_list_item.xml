<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:elevation="@null"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardCornerRadius="@dimen/corner_radius">
        <TextView
            android:id="@+id/device_alias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bluetooth_item_bk"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/bluetooth"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text="BixinKEY-12345678"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text"
            android:textSize="@dimen/sp_16"
            android:drawableEnd="@drawable/jiantou"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>