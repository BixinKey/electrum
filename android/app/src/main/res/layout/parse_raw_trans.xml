<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/signature"
                    android:textSize="@dimen/big_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sp_16"
                    android:layout_marginTop="@dimen/corner_radius"
                    android:text="@string/prompt_sig"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/text_margin"
                    android:background="@color/separation_line"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="0dp" />

                <EditText
                    android:id="@+id/edit_raw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.5dp"
                    android:paddingBottom="80dp"
                    android:layout_marginBottom="@dimen/sp_16"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/raw"
                    android:paddingStart="@dimen/sp_16"
                    android:paddingEnd="@dimen/sp_16"
                    android:textSize="@dimen/text_size"
                    app:layout_constraintStart_toStartOf="@id/textView30"
                    app:layout_constraintTop_toBottomOf="@id/view3" />

                <TextView
                    android:id="@+id/tet_Error"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:textColor="#F26A3A"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginStart="@dimen/sp_16"
                    android:text="@string/pin_input_again"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="@dimen/sp_16"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/import_file"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:textAllCaps="false"
                        android:layout_marginStart="@dimen/dp_20"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:background="@color/paste_bk"
                        android:text="@string/import_file"
                        android:textColor="@color/button_bk" />

                    <Button
                        android:id="@+id/sweep_sig"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:textAllCaps="false"
                        android:singleLine="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/saoyisao"
                        android:paddingStart="13dp"
                        android:paddingEnd="13dp"
                        android:text="@string/sweep"
                        android:textColor="@color/button_bk" />

                    <Button
                        android:id="@+id/paste_sig"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:singleLine="true"
                        android:textAllCaps="false"
                        android:layout_weight="1"
                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/zhantie"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_20"
                        android:text="@string/paste"
                        android:textColor="@color/button_bk" />


                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/confirm_sig"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:layout_marginBottom="37dp"
            android:background="@drawable/button_bk_grey"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>