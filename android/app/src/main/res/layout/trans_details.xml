<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <!--progress-->
        <RelativeLayout
            android:id="@+id/lin_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@android:color/white"
            android:paddingStart="@dimen/sp_16"
            android:paddingEnd="@dimen/sp_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/img_progressone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_one"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_progresstwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_two"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_progressthree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_three"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_progressfour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/progress_four"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tet_Trone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_trans"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tet_Trtwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cosigner_sign"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tet_Trthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watting_broadcast"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tet_Trfore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_on_chain"
                    android:textColor="@color/light_text"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tb2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="?attr/colorPrimary"
            android:navigationIcon="@drawable/back">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_15"
                android:padding="@dimen/dp_8"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_in_tb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/trans_details"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_5"
                android:padding="@dimen/dp_8"
                android:src="@drawable/share" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_150"
            android:visibility="gone">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="3" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_40"
                android:text="4" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin_progress">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_Trantime"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_105"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/corner_radius">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:drawablePadding="@dimen/dp_23"
                            android:text="@string/transaction_hash" />
                        <!--
                                    #E6E6E6 100% 1 34
                        -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/dp_200"
                            android:maxLines="1"
                            android:text="xxxxxxxxxxxxxxxxxxxx" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginTop="@dimen/dp_50"
                        android:background="@color/separation_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_55"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:drawablePadding="@dimen/dp_23"
                            android:text="@string/time" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/text_margin"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/dp_200"
                            android:maxLines="1"
                            android:text="xxxxxxxxxxxxxxx" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    app:cardCornerRadius="@dimen/corner_radius">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginTop="@dimen/dp_18"
                        android:text="@string/btc"
                        android:textColor="@color/text"
                        android:textSize="@dimen/big_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_64"
                        android:layout_marginTop="@dimen/dp_21"
                        android:text="@string/bitcoin"
                        android:textColor="@color/light_text"
                        android:textSize="@dimen/text_size" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_60"
                        android:background="@color/separation_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_81">

                        <TextView
                            android:layout_width="@dimen/dp_98"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:drawableStart="@drawable/blue_point"
                            android:drawablePadding="@dimen/dp_23"
                            android:text="@string/to" />
                        <!--
                                    #E6E6E6 100% 1 34
                        -->
                        <TextView
                            android:id="@+id/tet_getMoneyaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_10"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/dp_200"
                            android:maxLines="1"
                            android:text="xxxxxxxxxxxxxxxxxxxx" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginStart="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_120"
                        android:background="@color/separation_line" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginStart="@dimen/dp_19"
                        android:layout_marginTop="@dimen/dp_100"
                        android:background="@color/separation_line" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_141">

                        <TextView
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:drawableStart="@drawable/green_point"
                            android:drawablePadding="@dimen/dp_23"
                            android:text="@string/from" />

                        <TextView
                            android:id="@+id/tet_payAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/text_margin"
                            android:ellipsize="end"
                            android:maxWidth="@dimen/dp_200"
                            android:maxLines="1"
                            android:text="xxxxxxxxxxxxxxx" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/dp_70"
                    app:cardCornerRadius="@dimen/corner_radius"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_21"
                            android:text="@string/amount"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="1.33333"
                            app:layout_constraintStart_toEndOf="@id/textView12"
                            app:layout_constraintTop_toTopOf="@id/textView12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:text="@string/btc"
                            app:layout_constraintStart_toEndOf="@id/textView14"
                            app:layout_constraintTop_toTopOf="@id/textView14" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_19"
                            android:text="@string/fee"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView12" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="1.33333"
                            app:layout_constraintStart_toEndOf="@id/textView13"
                            app:layout_constraintTop_toTopOf="@id/textView13" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:text="@string/btc"
                            app:layout_constraintStart_toEndOf="@+id/textView15"
                            app:layout_constraintTop_toTopOf="@+id/textView15" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_19"
                            android:text="@string/comments"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/textView13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="hello"
                            app:layout_constraintStart_toEndOf="@id/textView16"
                            app:layout_constraintTop_toTopOf="@id/textView16" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp134"
                            android:background="@color/separation_line"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="@dimen/text_margin" />


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_21"
                            android:text="@string/transaction_status"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_20"
                            android:text="@string/transaction_waitting"
                            app:layout_constraintStart_toEndOf="@id/textView18"
                            app:layout_constraintTop_toTopOf="@id/textView18" />

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_194"
                            android:background="@color/separation_line"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/dp_21"
                            android:text="@string/signature_status"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/view1" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_19"
                            android:background="@color/button_bk"
                            android:paddingStart="@dimen/dp_3"
                            android:paddingEnd="@dimen/dp_3"
                            android:text="5/5"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/smaller_text_size"
                            app:layout_constraintStart_toEndOf="@id/textView19"
                            app:layout_constraintTop_toTopOf="@id/textView19" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recy_Signatory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_18"
                            android:paddingStart="@dimen/sp_16"
                            android:paddingEnd="@dimen/sp_16"
                            android:paddingBottom="@dimen/dp_10"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintTop_toBottomOf="@id/textView20"
                            tools:itemCount="5"
                            tools:listitem="@layout/sinatroy_item" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <Button
                android:id="@+id/sig_trans"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_marginBottom="@dimen/layout_margin"
                android:background="@drawable/blue_backgraound"
                android:text="@string/signature_trans"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>