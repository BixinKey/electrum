<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <ImageView
            android:id="@+id/picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_82"
            android:src="@drawable/wallet_unactive"
            android:contentDescription="@string/active_prompt" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/text"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_below="@id/picture"
            android:text="@string/active_prompt" />

        <CheckBox
            android:id="@+id/use_se"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/circle_checkbox"
            android:button="@null"
            android:layout_below="@id/text"
            android:layout_toStartOf="@id/se"
            android:layout_alignBaseline="@id/se"
            android:layout_marginTop="@dimen/dp_53"
            android:checked="true"/>

        <TextView
            android:id="@+id/se"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_53"
            android:text="@string/use_se"
            android:paddingStart="@dimen/dp_6"
            android:paddingEnd="@dimen/dp_6"
            android:textColor="@color/light_text"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/button_activate"
            android:layout_width="300dp"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bk"
            android:text="@string/active"
            android:layout_marginTop="@dimen/dp_86"
            android:layout_below="@id/text"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/light_text"
            android:layout_below="@id/button_activate"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_centerHorizontal="true"
            android:text="@string/random"/>
        <Button
            android:id="@+id/button_recover"
            android:layout_width="300dp"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/button_bk"
            android:layout_below="@id/button_activate"
            android:text="@string/recovery"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/light_text"
            android:layout_below="@id/button_recover"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_centerHorizontal="true"
            android:text="@string/recovery_promote"/>
    </RelativeLayout>

</LinearLayout>