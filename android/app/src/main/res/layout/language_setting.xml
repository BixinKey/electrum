<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <include layout="@layout/actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius">


                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radio_chineseasy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:button="@null"
                        android:text="@string/zh_simple"
                        android:textColor="@drawable/radiotext_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/separation_line" />

                    <RadioButton
                        android:id="@+id/radio_character"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/zh_traditional"
                        android:textColor="@drawable/radiotext_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/separation_line" />

                    <RadioButton
                        android:id="@+id/radio_english"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:button="@null"
                        android:text="@string/en"
                        android:textColor="@drawable/radiotext_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/separation_line" />

                    <RadioButton
                        android:id="@+id/radio_Korean"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:button="@null"
                        android:text="@string/korean"
                        android:textColor="@drawable/radiotext_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/separation_line" />

                    <RadioButton
                        android:id="@+id/radio_Japanese"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:layout_weight="1"
                        android:button="@null"
                        android:text="@string/japanese"
                        android:textColor="@drawable/radiotext_color" />

                </RadioGroup>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>