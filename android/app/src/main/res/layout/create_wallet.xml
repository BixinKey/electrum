<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="37.5dp"
    android:layout_marginEnd="37.5dp"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="172.9dp"
        android:contentDescription="@string/picture"
        android:src="@drawable/qidong_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="89dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/bn_create_wallet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_bk"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center_horizontal"
            android:text="@string/my_walet_many"
            android:textColor="#b3b3b3"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bn_import_wallet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/button_bk_grey"
            android:text="@string/import_w"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/radio_group_button_ag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:id="@+id/tet_Agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/boot_message"
            android:textColor="@color/light_text" />

    </LinearLayout>


</RelativeLayout>