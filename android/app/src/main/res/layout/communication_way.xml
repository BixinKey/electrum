<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"

            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/communication_way"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:textColor="@color/light_text"
            android:text="支持如下几种通讯方式，您可以任选其中一种(默认为NFC)："
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/nfc_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:outlineSpotShadowColor="@color/shadow_color"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_8"
            tools:ignore="UnusedAttribute">
            <TextView
                android:layout_width="wrap_content"
                android:text="NFC"
                android:textColor="@color/text"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/nfc"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_gravity="center_vertical|end"
                android:checked="true" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ble_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:outlineSpotShadowColor="@color/shadow_color"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_8"
            tools:ignore="UnusedAttribute">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/ble"
                android:layout_marginStart="@dimen/dp_16"
                android:textColor="@color/text"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/ble"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_gravity="center_vertical|end"
                android:checked="false" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/usb_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:outlineSpotShadowColor="@color/shadow_color"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_8"
            tools:ignore="UnusedAttribute">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:text="USB"
                android:textColor="@color/text"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/usb"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:background="@drawable/circle_checkbox"
                android:button="@null"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_gravity="center_vertical|end"
                android:checked="false"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>