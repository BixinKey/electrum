<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:background="@drawable/white_tuo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_soft_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:gravity="center_horizontal"
            android:text="@string/deletewallet_tips"
            android:textColor="@color/graytext_color"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tet_ConfirmDelete"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/delete_thiswallet"
            android:textColor="@color/red_text"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tet_cancle"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/set_txt"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</LinearLayout>
