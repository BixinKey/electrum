<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/send"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/llt_select_wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/sp_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1"
                    android:text="@string/pay_wallet"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tet_WalletName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/multi_sig"
                    android:textColor="@color/text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="@dimen/text_margin"
                    android:background="#FFFFB12B"
                    android:gravity="center"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:text="@string/btc"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/smaller_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:src="@drawable/jiantou" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintTop_toBottomOf="@id/cardView5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingEnd="@dimen/text_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:text="@string/to"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/bn_sweep_one2noe"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="false"
                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/saoyisao"
                        android:paddingStart="@dimen/layout_margin"
                        android:paddingEnd="@dimen/layout_margin"
                        android:text="@string/sweep"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/smaller_text_size"
                        app:layout_constraintBottom_toBottomOf="@id/textView25"
                        app:layout_constraintStart_toEndOf="@id/textView25" />

                    <Button
                        android:id="@+id/bn_paste_one2one"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textAllCaps="false"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/zhantie"
                        android:paddingStart="15dp"
                        android:paddingEnd="@dimen/layout_margin"
                        android:text="@string/paste"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/smaller_text_size"
                        app:layout_constraintBottom_toBottomOf="@id/bn_sweep_one2noe"
                        app:layout_constraintStart_toEndOf="@id/bn_sweep_one2noe" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_address_one2one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="@string/input_address"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="22.5dp"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@color/separation_line"
                    app:layout_constraintTop_toBottomOf="@id/edit_address_one2one" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/dp_20">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/sp_16"
                        android:text="@string/amount"
                        android:textColor="@color/text" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/corner_radius"
                        android:layout_toLeftOf="@+id/textView27"
                        android:background="@null"
                        android:maxLength="8"
                        android:gravity="center_vertical|end"
                        android:hint="@string/input_here"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:text="@string/btc"
                        android:textColor="@color/text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="@string/need_more"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView6" />

        <TextView
            android:id="@+id/tv_send2many"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="95dp"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_10"
            android:text="@string/send2many"
            android:textColor="@color/button_bk"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView6" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintTop_toBottomOf="@id/cardView6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/text_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_weight="1"
                        android:text="@string/rate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:background="@color/text_red"
                        android:gravity="center"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="@string/recommend"
                        android:textColor="@android:color/white"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/tet_Money"
                        android:paddingEnd="@dimen/dp_10"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/text"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:paddingStart="@dimen/dp_10"
                        android:text="0" />

                    <ImageView
                        android:id="@+id/fee_select"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_12"
                        android:src="@drawable/more" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="15dp"
                    android:background="@color/separation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/text_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comments" />

                    <EditText
                        android:id="@+id/comment_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxWidth="240dp"
                        android:maxLength="20"
                        android:paddingStart="@dimen/layout_margin"
                        android:paddingEnd="@dimen/dp_10"
                        android:singleLine="true"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/byte_count"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/limit" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/create_trans_one2one"
            android:layout_width="343dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/button_bk"
            android:text="@string/create_trans"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>