<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_tuo_big"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/tips_addspeed"
                android:textColor="@color/text_color1"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/cancel_select_wallet"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/dp_14"
                android:src="@drawable/close_big_black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tet_Newfee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/sp_20"
            android:text="@string/speed_fee"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/sp_20"
            android:text="@string/new_trsaction_tips"
            android:textColor="@color/black_gray_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/sp_20"
            android:text="@string/finish_tips"
            android:textColor="@color/black_gray_color"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <Button
            android:id="@+id/btn_add_Speed"
            android:layout_width="110dp"
            android:textSize="@dimen/sp_16"
            android:layout_height="35dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="15dp"
            android:background="@drawable/block_gray"
            android:text="@string/Confirm_speed"
            android:textAllCaps="false"
            android:textColor="@color/black_0" />
    </LinearLayout>

</LinearLayout>
