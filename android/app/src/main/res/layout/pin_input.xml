<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pin_prompt_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin_input"
            android:textColor="@color/text"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/pin_prompt_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/corner_radius"
            android:text="@string/pin_setting_first"
            android:textColor="@color/light_text"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="27dp">

        <EditText
            android:id="@+id/pin_edit"
            android:layout_width="@dimen/dp_1"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv1"
                style="@style/code_text_style" />

            <View
                android:layout_width="@dimen/layout_margin"
                android:layout_height="0dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv2"
                style="@style/code_text_style" />

            <View
                android:layout_width="@dimen/layout_margin"
                android:layout_height="0dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv3"
                style="@style/code_text_style" />

            <View
                android:layout_width="@dimen/layout_margin"
                android:layout_height="0dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv4"
                style="@style/code_text_style" />

            <View
                android:layout_width="@dimen/layout_margin"
                android:layout_height="0dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv5"
                style="@style/code_text_style" />

            <View
                android:layout_width="@dimen/layout_margin"
                android:layout_height="0dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tv6"
                style="@style/code_text_style" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/mistake_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/pin_input_again"
        android:textColor="@color/text_red"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible" />

</LinearLayout>