<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/send2many"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">


        <androidx.cardview.widget.CardView
            android:id="@+id/msndmcns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/sp_16">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:layout_weight="1"
                        android:ellipsize="middle"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:text="@string/to"
                        android:textColor="@color/text"
                        android:textSize="@dimen/text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/bn_sweep_2many"
                        android:layout_width="80dp"
                        android:layout_height="30dp"

                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/saoyisao"
                        android:paddingStart="13dp"
                        android:paddingEnd="@dimen/layout_margin"
                        android:text="@string/sweep"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/smaller_text_size"
                        app:layout_constraintBaseline_toBaselineOf="@id/textView25"
                        app:layout_constraintStart_toEndOf="@id/textView25" />

                    <Button
                        android:id="@+id/bn_paste_2many"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:background="@color/paste_bk"
                        android:drawableStart="@drawable/zhantie"
                        android:paddingStart="15dp"
                        android:paddingEnd="@dimen/layout_margin"
                        android:text="@string/paste"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/smaller_text_size"
                        app:layout_constraintBaseline_toBaselineOf="@id/bn_sweep_2many"
                        app:layout_constraintStart_toEndOf="@id/bn_sweep_2many" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_address_2many"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@null"
                    android:hint="@string/input_address"
                    android:textSize="@dimen/text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView25" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="22.5dp"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@color/separation_line"
                    app:layout_constraintTop_toBottomOf="@id/edit_address_2many" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19.5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/text_margin"
                        android:text="@string/amount"
                        android:textColor="@color/text" />

                    <EditText
                        android:id="@+id/edit_amount_2many"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical|end"
                        android:hint="@string/input_here"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size"
                        app:layout_constraintEnd_toStartOf="@id/textView27"
                        app:layout_constraintTop_toTopOf="@id/textView26" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:text="@string/btc"
                        android:textColor="@color/text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edit_amount_2many" />

                </LinearLayout>

                <View
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginTop="19.5dp"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:background="@color/separation_line"
                    app:layout_constraintTop_toBottomOf="@id/textView26" />

                <LinearLayout
                    android:id="@+id/lin_add_to"
                    android:layout_width="match_parent"
                    android:layout_height="59dp"
                    android:background="@drawable/add_bk"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3">

                    <ImageView
                        android:id="@+id/imgsudbnsd"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/add" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="@string/add"
                        android:textColor="@color/button_bk" />

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_add_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"
            android:layout_below="@+id/msndmcns"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/layout_margin"
            tools:itemCount="2"
            tools:listitem="@layout/vout_item" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/button_bk_ddake"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:text="0"
                android:textColor="@color/button_bk"
                android:textSize="22sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/corner_radius"
                android:text="@string/btc"
                android:textSize="@dimen/smaller_text_size" />

            <Button
                android:id="@+id/bn_send2many_next"
                android:layout_width="190dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="101.5dp"
                android:background="@color/button_bk"
                android:text="@string/next"
                android:textColor="@android:color/white" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>