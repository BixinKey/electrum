<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activities.personalwallet.WalletDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/layout_margin"
                android:background="@drawable/white_tuo">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_16"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="@string/walletname"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tet_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="@string/wallet_name"
                    android:textColor="@color/text"
                    android:textSize="@dimen/sp_16" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/layout_margin"
                app:cardCornerRadius="@dimen/corner_radius"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/img_Code"
                        android:layout_width="248.3dp"
                        android:layout_height="248.3dp"
                        android:layout_marginTop="32dp"
                        android:background="@color/bk_page" />

                    <TextView
                        android:id="@+id/tet_getBTC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:textColor="@color/text"
                        android:textSize="@dimen/sp_13"
                        tools:text="lnbcdfd4fdsk4j5gb5...h6jd0sjsadrrfgg55678hhhddddejekejkejkejek3ddkddd" />

                    <TextView
                        android:id="@+id/tet_Copy"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:text="@string/copy_self"
                        android:textColor="@color/button_bk"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/tet_deleteWallet"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/white_tuo"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@string/delete_wallet"
                android:layout_marginTop="20dp"
                android:textColor="@color/red_text"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>