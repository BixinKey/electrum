<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reckidshjkjsn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/img_backCreat"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/create_trans"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/reckidshjkjsn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/layout_margin"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="64.5dp"
                android:layout_marginStart="@dimen/text_margin"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/create_multisig"
                android:textColor="@color/text"
                android:textSize="@dimen/big_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="64.5dp"
                android:background="@color/separation_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179.5dp"
                android:layout_marginTop="65.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/set_wallet_name"
                        android:textSize="@dimen/smaller_text_size" />

                    <EditText
                        android:id="@+id/wallet_name_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="@string/input_here"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:maxLength="7"
                        android:textColor="@color/light_text"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/separation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/select_cosigner"
                        android:textSize="@dimen/smaller_text_size" />

                    <TextView
                        android:id="@+id/cosigner_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:drawableEnd="@drawable/jiantou"
                        android:drawablePadding="@dimen/layout_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical|end"
                        android:text="@string/select"
                        android:textSize="@dimen/text_size" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/separation_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/select_sig_num"
                        android:textSize="@dimen/smaller_text_size" />

                    <TextView
                        android:id="@+id/sig_num_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/text_margin"
                        android:drawableEnd="@drawable/jiantou"
                        android:drawablePadding="@dimen/layout_margin"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical|end"
                        android:text="@string/select"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="105dp"
            android:text="@string/tips"
            android:textColor="@color/light_text"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/bn_create_multi_next"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="252dp"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/button_bk"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView" />

    </RelativeLayout>

</RelativeLayout>