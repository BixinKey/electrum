<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reckidshjkjsn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_backTrsa"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="@string/transaction_records"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_4"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spi_BTC"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_weight="1"
            android:dropDownWidth="130dp"
            android:dropDownHorizontalOffset="70dp"
            android:dropDownVerticalOffset="54dp"
            android:elevation="@dimen/layout_margin"
            android:entries="@array/type"
            android:gravity="center"
            android:spinnerMode="dropdown"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spi_ZT"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginEnd="@dimen/sp_16"
            android:layout_weight="1"
            android:dropDownWidth="130dp"
            android:dropDownHorizontalOffset="70dp"
            android:dropDownVerticalOffset="54dp"
            android:entries="@array/state"
            android:gravity="center_vertical"
            android:spinnerMode="dropdown">

        </androidx.appcompat.widget.AppCompatSpinner>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginEnd="@dimen/layout_margin"
        android:layout_marginBottom="@dimen/layout_margin"
        android:elevation="@dimen/dp_4"
        app:cardCornerRadius="@dimen/corner_radius">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recy_jylist"
            android:name="com.example.myapplication1.ItemFragment2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:itemCount="4"
            tools:listitem="@layout/fragment_item_trans" />

        <TextView
            android:id="@+id/tet_None"
            android:textColor="@color/light_text"
            android:layout_marginTop="50.5dp"
            android:textSize="@dimen/text_size"
            android:visibility="gone"
            android:text="@string/no_records"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>