<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="419dp"
        app:cardCornerRadius="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="48.5dp"
                android:gravity="center"
                android:paddingStart="32.4dp"
                android:paddingEnd="16.2dp"
                android:text="@string/add_cosigner"
                android:textColor="@color/text_color1"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/cancel_cosigner_add_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/close_big_black"
                app:layout_constraintEnd_toEndOf="@id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/ln"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:background="@color/separation_line"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12.5dp"
                android:text="方式一：使用硬件设备"
                android:textSize="15sp"
                android:textColor="@color/text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ln" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@color/text_red"
                android:textSize="10sp"
                android:text="@string/recommend"

                android:textColor="@android:color/white"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <Button
                android:id="@+id/bn_use_hardware_add_cosigner_popup"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="61.5dp"
                android:background="@drawable/button_bk"
                android:text="使用硬件设备"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ln" />

            <View
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="29.5dp"
                android:background="@color/separation_line"
                app:layout_constraintTop_toBottomOf="@+id/bn_use_hardware_add_cosigner_popup" />
            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方式二：输入公钥地址"
                android:layout_marginTop="15.5dp"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:textColor="@color/text"
                app:layout_constraintTop_toBottomOf="@id/ln1"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView9">

                <EditText
                    android:id="@+id/edit_public_key_cosigner_popup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:gravity="start"
                    android:background="@color/edit_text_bk"
                    android:hint="@string/input_address"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <Button
                    android:id="@+id/sweep_cosigner_popup"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:background="@color/paste_bk"
                    android:drawableStart="@mipmap/saoyisao"
                    android:paddingStart="17.8dp"
                    android:paddingEnd="17dp"
                    android:gravity="center"
                    android:text="@string/sweep"
                    android:textColor="@color/button_bk"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/paste_cosigner_popup"
                    android:layout_width="100dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/paste_bk"
                    android:drawableStart="@mipmap/zhantie"
                    android:paddingStart="26.8dp"
                    android:paddingEnd="24dp"
                    android:text="@string/paste"
                    android:gravity="center"
                    android:textColor="@color/button_bk"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>
    
</RelativeLayout>
