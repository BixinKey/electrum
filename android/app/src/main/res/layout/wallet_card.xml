<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_card"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_180"
        android:elevation="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/button_bk">

            <TextView
                android:id="@+id/wallet_card_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/wallet_name"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/wallet_card_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_26"
                android:drawableStart="@drawable/rule_white"
                android:drawablePadding="@dimen/dp_5"
                android:text="3-7"
                android:textColor="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/wallet_card_tv1"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/wallet_card_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:text="@string/balance"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv1"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv1" />

            <TextView
                android:id="@+id/wallet_card_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:text="43.556 BTC"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@id/wallet_card_tv3"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv3" />

            <Button
                android:id="@+id/wallet_card_bn1"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_27"
                android:layout_marginStart="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_marginEnd="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_19"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smaller_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/wallet_card_bn2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/wallet_card_tv4" />

            <Button
                android:id="@+id/wallet_card_bn2"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_27"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_9"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/receive"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smaller_text_size"
                app:layout_constraintBottom_toBottomOf="@id/wallet_card_bn1"
                app:layout_constraintEnd_toStartOf="@id/wallet_card_bn3"
                app:layout_constraintStart_toEndOf="@id/wallet_card_bn1" />

            <Button
                android:id="@+id/wallet_card_bn3"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_27"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_marginEnd="@dimen/dp_26"
                android:background="@drawable/button_bk_small"
                android:gravity="center"
                android:text="@string/signature"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smaller_text_size"
                app:layout_constraintBottom_toBottomOf="@id/wallet_card_bn2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wallet_card_bn2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>