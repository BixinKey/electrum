<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--导航栏颜色-->
        <item name="colorPrimary">@android:color/white</item>
        <!--状态栏颜色（页面最顶层显示时间的地方）--> <!--TODO: 修改状态栏文字颜色，改为白底黑字-->
        <item name="colorPrimaryDark">@null</item>
        <!--全局的获取焦点后的光标颜色(控件主题颜色)-->
        <item name="colorAccent">@color/button_bk</item>
    </style>

    <style name="code_text_style">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLength">1</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/pin_input</item>
    </style>
</resources>
