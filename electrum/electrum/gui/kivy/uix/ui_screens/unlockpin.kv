Popup:
    id: rt
    title: _('Unlock Password')
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        TopLabel:
            text: _("Unlock password for the smart card")
            font_size: '6pt'
        Widget:
            size_hint: 1, 0.8
        GridLayout:
            cols: 2
            Label:
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: _('Password') + ':'
            TextInput:
                id: password
                multiline: False
                height: '36dp'
                size_hint_x: 3
                size_hint_y: None
                text: ""
        Widget:
            size_hint: 1, 0.1
        BoxLayout:
            Widget:
                size_hint: 0.5, None
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('OK')
                on_release:
                    app._settings_dialog.unlock_pin(rt, password=str(root.ids.password.text))