#:import VERSION electrum.version.ELECTRUM_VERSION


ModalView:
    id: nd
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: "back"
            pos_hint: {'x': .1, 'y': .5}
            size_hint: .1, .1
        Label:
            text: _('Setting')
            bold: True
            font_size: 30
            text_size: self.width - dp(100), None
            color:  [0.098, 0.098, 0.439, 1]
            size_hint_x: 0.4
        Label:
            text: _('SUGGESTED SCENES')
            text_size: self.width - dp(100), None
            color:  [.745, .745, .745, 1]
            size_hint_x: 0.4
        GridLayout:
            rows: 3
            spacing: '15dp'
            TopLabel:
                text_size: self.width - dp(100), None
                color:  [0.098, 0.098, 0.439, 1]
                text: _('activation cold wallet')
                size_hint_x:0.4
            TopLabel:
                text_size: self.width - dp(100), None
                #halign: 'left'
                color:  [0.098, 0.098, 0.439, 1]
                text: "message mannager"
                size_hint_x: 0.4
            TopLabel:
                text_size: self.width - dp(100), None
                #halign: 'left'
                color:  [0.098, 0.098, 0.439, 1]
                text: _('languages')
                size_hint_x: 0.4
        Label:
            text_size: self.width - dp(100), None
            color:  [.745, .745, .745, 1]
            text: _('MORE')
            size_hint_x: 0.4
        GridLayout:
            rows: 2
            spacing: '15dp'
            TopLabel:
                text_size: self.width - dp(100), None
                color:  [0.098, 0.098, 0.439, 1]
                text: _('online service')
                size_hint_x: 0.4
            TopLabel:
                text_size: self.width - dp(100), None
                color:  [0.098, 0.098, 0.439, 1]
                text: "about"
                size_hint_x: 0.4