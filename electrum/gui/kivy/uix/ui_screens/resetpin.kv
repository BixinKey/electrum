Popup:
    id: rt
    title: _('Reset Password')
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        TopLabel:
            text: _("Reset password for the smart card")
            font_size: '6pt'
        Widget:
            size_hint: 1, 0.8
        GridLayout:
            cols: 2
            Label:
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: _('Old_PIN') + ':'
            TextInput:
                id: old_pin
                multiline: False
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: ""
            Label:
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: _('New_PIN') + ':'
            TextInput:
                id: new_pin
                multiline: False
                input_type: 'number'
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: ''
            Label:
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: _('Confirm New_PIN') + ':'
            TextInput:
                id: comfirm_new_pin
                multiline: False
                input_type: 'number'
                height: '36dp'
                size_hint_x: 1
                size_hint_y: None
                text: ''
        Widget:
            size_hint: 1, 0.1
        BoxLayout:
            Widget:
                size_hint: 0.5, None
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('OK')
                on_release:
                    app._settings_dialog.reset_pin(rt, old_pin=str(root.ids.old_pin.text), new_pin=str(root.ids.new_pin.text), comfirm_new_pin=str(root.ids.comfirm_new_pin.text))